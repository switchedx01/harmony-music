# dad_player/kv/screens/playlist_view.kv

#:import dp kivy.metrics.dp
#:import SongListItem dad_player.ui.widgets.song_list_item.SongListItem
#:import SongRowItem dad_player.ui.widgets.song_list_item.SongRowItem

<PlaylistView>:
    orientation: 'vertical'

    MDBoxLayout:
        adaptive_height: True
        padding: "16dp", "8dp"
        spacing: "12dp"

        MDLabel:
            text: root.active_playlist_name
            font_style: "H6"
            adaptive_height: True
            shorten: True

        MDIconButton:
            id: mobile_menu_button
            icon: "menu"
            on_release: root._playlist_menu.open() if root._playlist_menu else None

    RecycleView:
        id: playlist_rv
        viewclass: 'SongListItem'  # Default; changed dynamically

        RecycleBoxLayout:
            orientation: 'vertical'
            default_size: None, dp(88) if root.is_mobile else dp(64)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(2)